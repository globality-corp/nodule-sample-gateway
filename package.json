{
    "name": "pikachu",
    "version": "0.1.0",
    "description": "Sample gateway to demonstrate making gateways with the nodule- framework.",
    "license": "UNLICENSED",
    "main": "src/index.js",
    "scripts": {
        "lint": "eslint src",
        "local": "PIKACHU__DEBUG=1 nodemon --inspect src/index.js --ignore dist/ --ignore coverage/ --exec babel-node",
        "build": "babel src --ignore __tests__,__mocks__ --out-dir dist",
        "test": "jest -w 1",
        "coverage": "jest --coverage"
    },
    "dependencies": {
        "@globality/nodule-config": "^2.9.0",
        "@globality/nodule-express": "^0.1.8",
        "@globality/nodule-graphql": "^0.29.0",
        "@globality/nodule-logging": "^1.5.0",
        "@globality/nodule-memcached": "^0.1.2",
        "@globality/nodule-openapi": "^0.16.0",
        "apollo-server-core": "^1.4.0",
        "apollo-server-errors": "^2.0.2",
        "aws-sdk": "^2.392.0",
        "body-parser": "^1.18.2",
        "enum": "^2.4.0",
        "exit-hook": "^1.1.1",
        "express": "^4.16.3",
        "graphql": "^0.13.2",
        "graphql-express-persisted-query": "^0.1.2",
        "http-status-codes": "^1.3.0",
        "jest-cli": "^22.4.2",
        "lodash": "^4.17.2",
        "md5": "^2.2.1",
        "moment": "^2.24.0",
        "yarn": "^1.12.3"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^8.2.2",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "eslint": "^4.18.2",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.9.0",
        "jest": "^22.4.2",
        "nodemon": "^1.18.7",
        "supertest": "^3.0.0"
    },
    "resolutions": {
        "mem": "^5.1.1"
    },
    "jest": {
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "./dist"
        ],
        "coveragePathIgnorePatterns": [
            "src/services",
            "src/config"
        ],
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 72,
                "branches": 50,
                "functions": 74,
                "lines": 75
            }
        },
        "modulePathIgnorePatterns": []
    }
}
