{
    "name": "pikachu",
    "version": "0.1.0",
    "description": "Sample gateway to demonstrate making gateways with the nodule- framework.",
    "license": "UNLICENSED",
    "main": "src/index.js",
    "scripts": {
        "lint": "eslint src",
        "local": "PIKACHU__DEBUG=1 nodemon --inspect src/index.js --ignore dist/ --ignore coverage/ --exec babel-node",
        "build": "babel src --ignore __tests__,__mocks__ --out-dir dist",
        "test": "jest -w 1",
        "coverage": "jest --coverage"
    },
    "dependencies": {
        "@globality/nodule-config": "^2.13.0",
        "@globality/nodule-express": "^0.1.12",
        "@globality/nodule-graphql": "^1.2.1",
        "@globality/nodule-logging": "^1.5.2",
        "@globality/nodule-openapi": "^0.17.2",
        "apollo-server-core": "^1.4.0",
        "apollo-server-errors": "^2.0.2",
        "aws-sdk": "^2.392.0",
        "body-parser": "^1.18.2",
        "enum": "^2.4.0",
        "exit-hook": "^1.1.1",
        "express": "^4.16.3",
        "graphql": "^14.5.8",
        "graphql-express-persisted-query": "^0.1.2",
        "http-status-codes": "^1.3.0",
        "jest-cli": "^24.9.0",
        "lodash": "^4.17.2",
        "md5": "^2.2.1",
        "moment": "^2.24.0",
        "yarn": "^1.22.0"
    },
    "devDependencies": {
        "apollo": "^2.21.1",
        "@babel/cli": "^7.7.0",
        "@babel/core": "^7.7.2",
        "@babel/node": "^7.7.0",
        "@babel/preset-env": "^7.7.1",
        "eslint": "^4.18.2",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.9.0",
        "jest": "^24.9.0",
        "nodemon": "^1.18.7",
        "supertest": "^3.0.0"
    },
    "resolutions": {
        "mem": "^5.1.1"
    },
    "jest": {
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "./dist"
        ],
        "coveragePathIgnorePatterns": [
            "src/services",
            "src/config"
        ],
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 72,
                "branches": 50,
                "functions": 74,
                "lines": 75
            }
        },
        "modulePathIgnorePatterns": []
    }
}
